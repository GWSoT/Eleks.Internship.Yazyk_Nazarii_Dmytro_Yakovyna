            </div>
            <div class="form-group">
                <label asp-for="SaturdaySchedule" class="control-label"></label>
                <input asp-for="SaturdaySchedule" class="form-control" />
                <span asp-validation-for="SaturdaySchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SundaySchedule" class="control-label"></label>
                <input asp-for="SundaySchedule" class="form-control" />
                <span asp-validation-for="SundaySchedule" class="text-danger"></span>
            </div>
            @if (Model.ProfilePicture != null)
            {
            <div class="form-group">
                <div class="col-md-10">
                    <img src="~/uploads//@Model.User.Id/@Model.ProfilePicture" />
                    <input type="hidden" asp-for="ProfilePicture" />
                </div>
            </div>
            }
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input name="ProfilePictureFile" type="file"/>
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            
        </form>
        <form asp-action="FetchApi" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <div>
                <p>
                    <button type="submit" class="btn btn-default" name="provider" value="GoogleFit" title="Log in using your Google Fit account">Google Fit</button>
                </p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
